  "content": {
    "bodyModel": {
      "paragraphs": [
        {
          "id": "24005aa7e0c3_0",
          "href": null,
          "name": "1629",
          "text": "What Would YOU Do with 2 Trillion Dollars?",
          "metadata": null,
