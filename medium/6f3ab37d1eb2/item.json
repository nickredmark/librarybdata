          "text": "A conversation between Pavel Cenkl & Daniel Wahl about education for the ReGeneration",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [],
          "type": "H4"
