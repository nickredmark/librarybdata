          "iframe": null,
          "layout": "OUTSET_LEFT",
          "markups": [
            {
              "end": 58,
              "href": "http://www.sciencedirect.com/science/article/pii/S030326471400080X",
              "rel": "",
              "start": 54,
              "title": "",
              "anchorType": "LINK",
