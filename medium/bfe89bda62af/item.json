              "type": "A",
              "name": null,
              "creatorIds": null
            },
            {
              "end": 328,
              "href": null,
              "rel": null,
              "start": 141,
              "title": null,
              "anchorType": null,
              "linkMetadata": null,
              "type": "STRONG",
              "name": null,
              "creatorIds": null
            }
          ],
          "type": "P"
        },
        {
          "id": "13923b724b52_18",
          "href": null,
          "name": "f581",
          "text": "Onward, fellow humans.",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [],
          "type": "P"
        },
