              "name": null,
              "creatorIds": null
            },
            {
              "end": 28,
              "href": null,
              "rel": null,
              "start": 0,
              "title": null,
              "anchorType": null,
              "linkMetadata": null,
              "type": "STRONG",
              "name": null,
              "creatorIds": null
            },
            {
              "end": 28,
