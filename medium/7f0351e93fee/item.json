        },
        {
          "id": "2deb41ddf67a_18",
          "href": null,
          "name": "dc3b",
          "text": "From Incontext Institute, Robert Gilman (Further Reading)",
          "metadata": {
            "id": "1*5ndsV_UXREd7M3xy25vM-w.png",
            "alt": null
          },
          "mixtapeMetadata": null,
          "hasDropCap": null,
