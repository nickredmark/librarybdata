        {
          "id": "2deb41ddf67a_17",
          "href": null,
          "name": "42ea",
          "text": "Humanity in transition — From the Era of Empires to the Planetary Era",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [
