        {
          "id": "e193622ba76a_2",
          "href": null,
          "name": "faae",
          "text": "Joanna Harcourt-Smith interviews Daniel Christian Wahl on Future Primitive",
          "metadata": null,
          "mixtapeMetadata": null,
