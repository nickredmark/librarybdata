          "name": "dc06",
          "text": "A conversation with Stephan Harding: Deep Ecology, Holistic Science and right relationships in an Animate Earth",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [],
          "type": "H3"
