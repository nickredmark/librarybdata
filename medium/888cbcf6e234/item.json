              "title": "",
              "anchorType": "LINK",
              "linkMetadata": null,
              "type": "A",
              "name": null,
              "creatorIds": null
            },
            {
              "end": 76,
              "href": "https://culturalevolutionsociety.org/",
              "rel": "",
              "start": 50,
              "title": "",
              "anchorType": "LINK",
