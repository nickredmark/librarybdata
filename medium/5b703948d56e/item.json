          "type": "P"
        },
        {
          "id": "22c206a52ba4_9",
          "href": null,
          "name": "d541",
          "text": "What is our purpose?",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [
            {
              "end": 20,
