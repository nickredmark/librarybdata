        },
        {
          "id": "66bc4e368f72_1",
          "href": null,
          "name": "5640",
          "text": "Systemic Bio-inspired design: resilience, panarchy and regeneration",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [
            {
              "end": 67,
              "href": null,
              "rel": null,
              "start": 0,
              "title": null,
              "anchorType": null,
