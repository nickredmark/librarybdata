          "name": "edd0",
          "text": "A culturally regenerative COVID 19 response starts from potential",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [],
