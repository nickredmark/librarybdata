          "href": null,
          "name": "3d56",
          "text": "— James Lovelock (2000, p.25).",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [],
