    "bodyModel": {
      "paragraphs": [
        {
          "id": "233e4e6aa1a1_0",
          "href": null,
          "name": "1470",
          "text": "The Global Architecture of Wealth Extraction",
          "metadata": null,
          "mixtapeMetadata": null,
