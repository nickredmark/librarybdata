          "name": "9751",
          "text": "Human and Planetary Health [Part II: Going Upstream]",
          "metadata": null,
          "mixtapeMetadata": null,
          "hasDropCap": null,
          "dropCapImage": null,
          "iframe": null,
          "layout": null,
          "markups": [],
